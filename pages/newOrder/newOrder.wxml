<form bindsubmit="formSubmit" bindreset="formReset" class='container'>
 
    <view class="flex_row">
     <view >姓名： </view>
     <input name="buyerName" placeholder="姓名" />      
    </view>
    <view class="flex_row">
     <view >电话： </view>
     <input name="telephone" placeholder="电话" />      
    </view>
    <view class="flex_row">
     <view >地址： </view>
     <input name="address" placeholder="地址" />      
    </view>

    <view class="flex_row">
     <view >商品名称： </view>
     <input name="productName" placeholder="商品名称" />      
    </view>
    <view class="flex_row">
     <view >商品单价： </view>
     <input name="sellingPrice" placeholder="商品单价" />      
    </view>
    <view class="flex_row">
     <view >数量： </view>
     <input name="productNumber" placeholder="数量" />      
    </view>
    <view class="flex_row">
     <view >总价： </view>
     <input name="totalPrice" />      
    </view>

  <view class="btn-area">
    <button formType="submit">提交</button>
    <button formType="reset">重置</button>
  </view>
</form>
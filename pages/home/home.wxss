page{
    height: 100%
}
.content{
    width: 100%;
    height: 100%;
}
.orderItem{
  display: flex;
  flex-direction: column;
}
.orderItem .summary{
  display: flex;
  justify-content: space-between;
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #eee;
}
.orderItem .summary .state{
  display: flex;
 flex-direction:row;
}
.orderProductItem{
  display: flex;
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #eee;
  cursor: pointer;
  justify-content: space-between;
}
.orderProductItem .left{
   flex: 1;
}
.orderProductItem .right{
  font-size: 28rpx;
  font-weight: bold;
  color: #f74c31;
  display: flex;
  flex-direction: column;
}